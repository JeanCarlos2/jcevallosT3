<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcevallosT3.Views.vSecundaria"
             Title="vSecundaria">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Image Source="https://cdn-icons-png.flaticon.com/512/7039/7039832.png" 
                   HeightRequest="150" HorizontalOptions="Center"/>

            <Label x:Name="lblIdentificacion" 
                   FontSize="20" TextColor="Azure"/>
            <Label x:Name="lblNombres" 
                   FontSize="20" TextColor="Azure"/>
            <Label x:Name="lblApellidos" 
                   FontSize="20" TextColor="Azure"/>
            <Label x:Name="lblFecha" 
                   FontSize="20" TextColor="Azure"/>
            <Label x:Name="lblCorreo" 
                   FontSize="20" TextColor="Azure"/>
            <Label x:Name="lblSalario" 
                   FontSize="20" TextColor="Azure"/>
            <Label x:Name="lblAporte"
                   FontSize="20" TextColor="Red"/>

            <Button Text="Exportar a Archivo" 
                    Clicked="Button_Clicked"
                    BackgroundColor="Green" TextColor="White" FontSize="18"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>